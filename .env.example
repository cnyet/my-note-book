# ============================================
# my-note-book 项目环境变量配置模板
# ============================================
# 复制此文件为 .env 并根据需要修改
# cp .env.example .env
# ============================================

# ============================================
# 全局配置
# ============================================
NODE_ENV=development
PYTHON_ENV=development

# ============================================
# 后端配置 (Backend)
# ============================================

# 数据库配置
DATABASE_URL=sqlite+aiosqlite:///./backend/data/my_note_book.db

# JWT 认证配置
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS 配置
ALLOWED_ORIGINS=http://localhost:3001,http://127.0.0.1:3001

# 应用配置
APP_ENV=development
APP_NAME=my-note-book
APP_VERSION=0.1.0
DEBUG=true

# 日志配置
LOG_LEVEL=INFO

# 文件上传配置
UPLOAD_DIR=./backend/uploads
MAX_UPLOAD_SIZE=10485760

# WebSocket 配置
WEBSOCKET_HOST=0.0.0.0
WEBSOCKET_PORT=8001

# Redis 配置（可选）
# REDIS_URL=redis://localhost:6379/0
# REDIS_PASSWORD=

# LobeChat 配置（可选）
# LOBECHAT_API_URL=http://localhost:3210

# OAuth 配置（可选）
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# ============================================
# 前端配置 (Frontend)
# ============================================

# API 配置
# 注意: 代码中会自动拼接 /api/v1，此处只需填写后端根地址
NEXT_PUBLIC_API_URL=http://localhost:8001
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:8001/ws

# 应用配置
NEXT_PUBLIC_APP_NAME=MyNoteBook
NEXT_PUBLIC_APP_DESCRIPTION=Modern AI Multi-Agent Orchestration Platform

# 功能开关
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_LOBECHAT=true

# LobeChat 配置（可选）
# NEXT_PUBLIC_LOBECHAT_URL=http://localhost:3210

# OAuth 配置（可选）
# NEXT_PUBLIC_GITHUB_CLIENT_ID=your-github-client-id
# NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id

# ============================================
# 测试配置
# ============================================
TEST_DATABASE_URL=sqlite:///./tests/test.db
TEST_API_URL=http://localhost:8001
TEST_BROWSER=chromium

# ============================================
# 部署配置
# ============================================
# DOCKER_REGISTRY=
# KUBERNETES_NAMESPACE=
# DEPLOY_ENV=production
