# 数据库配置
DATABASE_URL=sqlite:///./work_agents.db

# JWT 认证配置
# IMPORTANT: Generate a secure key for production with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_GENERATE_SECURE_KEY_WITH_PYTHON_SECRETS_MODULE
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# 安全配置
ENVIRONMENT=development
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS 配置
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# 应用配置
APP_ENV=development
APP_NAME=my-note-book
APP_VERSION=0.1.0
DEBUG=true

# 日志配置
LOG_LEVEL=INFO

# 文件上传配置
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB

# Redis 配置（可选）
# REDIS_URL=redis://localhost:6379/0
# REDIS_PASSWORD=

# LobeChat 配置（可选）
# LOBECHAT_API_URL=http://localhost:3210

# 管理员初始账户配置（仅首次初始化时使用）
# WARNING: 默认管理员密码应在生产环境中立即修改
FIRST_ADMIN_USERNAME=admin
FIRST_ADMIN_PASSWORD=CHANGE_THIS_IMMEDIATELY
FIRST_ADMIN_EMAIL=admin@example.com
