# 数据库配置
# 异步驱动: aiosqlite (必须使用 sqlite+aiosqlite:// 前缀)
DATABASE_URL=sqlite+aiosqlite:///./data/my_note_book.db

# JWT 认证配置
# IMPORTANT: 生产环境请生成安全密钥: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_GENERATE_SECURE_KEY_WITH_PYTHON_SECRETS_MODULE
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# 环境配置
ENVIRONMENT=development

# CORS 配置
ALLOWED_ORIGINS=http://localhost:3001,http://127.0.0.1:3001

# 应用配置
APP_ENV=development
APP_NAME=MyNoteBook
APP_VERSION=0.1.0
DEBUG=true

# 日志配置
LOG_LEVEL=INFO

# 文件上传配置
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB

# Redis 配置（可选）
# REDIS_URL=redis://localhost:6379/0
# REDIS_PASSWORD=

# 管理员初始账户配置（仅首次初始化时使用）
# WARNING: 默认管理员密码应在生产环境中立即修改
FIRST_ADMIN_USERNAME=admin
FIRST_ADMIN_PASSWORD=CHANGE_THIS_IMMEDIATELY
FIRST_ADMIN_EMAIL=admin@example.com
